@page "/Student"

<h3>Student</h3>

<NavLink class="nav-link" href="AddStudent">
    <span class="oi oi-plus" aria-hidden="true"> ADD NEW</span>
</NavLink>
<h1>Student Details</h1>
@if (objstudent == null)
{
    <p><em>Loading.....</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Student ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Age</th>
                <th>Address</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in objstudent)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Firstname</td>
                    <td>@item.Lastname</td>
                    <td>@item.Age</td>
                    <td>@item.Address</td>

                    <td>
                        <a class="nav-link" href="EditStudent/@item.Id">
                            <span class="oi oi-pencil" aria-hidden="true"></span> Edit
                        </a>
                        <a class="nav-link" href="DeleteStudent/@item.Id">
                            <span class="oi oi-trash" aria-hidden="true"></span> Delete
                        </a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
}
@functions
{
    List<Student> objstudent;
    protected override async Task OnInitializedAsync()
    {
        objstudent = _student.GetStudent();

    }
}
